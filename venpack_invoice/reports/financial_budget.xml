<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <template id="financial_budget">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">

                        <div class="header">
                            <t t-if="not o" t-set="o" t-value="doc"/>
                            <t t-if="not company">
                                <!-- Multicompany -->
                                <t t-if="company_id">
                                    <t t-set="company" t-value="company_id"/>
                                </t>
                                <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                                    <t t-set="company" t-value="o.company_id.sudo()"/>
                                </t>
                                <t t-else="else">
                                    <t t-set="company" t-value="res_company"/>
                                </t>
                            </t>

<!--                            <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">-->
                                <div class="row">
                                    <div class="col-3 mb4">
                                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 100px;" alt="Logo"/>
                                    </div>
                                    <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
                                </div>
                                <div t-if="company.logo or company.report_header" class="row zero_min_height">
                                    <div class="col-12">
                                        <div style="border-bottom: 1px solid black;"/>
                                    </div>
                                </div>
<!--                                <div class="row">-->
<!--                                    <div class="col-6" name="company_address">-->
<!--                                        <span t-if="company.company_details" t-field="company.company_details"></span>-->
<!--                                    </div>-->
<!--                                </div>-->
<!--                            </div>-->
                        </div>

                        <div class="page" style="font-size: 10pt; font-family: Arial, Helvetica, sans-serif;">
                            <div class="oe_structure"/>

                            <div class="text-right">
                                <span>Caracas, </span>
                                <span t-esc="o.date_order.strftime('%A %d de %B del %Y')" />
                            </div>

                            <div class="text-left">
                                <span>Señores:</span>
                                <br/>
                                <stron><span t-field="o.partner_id.name"/></stron>
                                <br/>
                                <t t-if="o.partner_id.child_ids">
                                    <span>Atn. </span><span t-field="o.partner_id.child_ids[0].name"/>
                                </t>
                            </div>

                            <div class="row">
                                <div class="col-8"/>
                                <div class="col-4">
                                    <div class="row">
                                        <div class="col-5 border border-secondary">
                                            <stron><span>Cotización No</span></stron>
                                        </div>
                                        <div class="col-5 border border-secondary">
                                            <stron><span t-field="o.x_NroCotizacion"/></stron>
                                        </div>
                                        <div class="col-2"/>
                                    </div>
                                </div>
                            </div>
                            <br/>

                            <div>

                                <stron>
                                    <span>&#160;&#160;&#160;&#160;&#160;</span>
                                    <span>
                                    Reciba a través de la presente nuestra mejor oferta de acuerdo a su solicitud.
                                    Efectuada a su consideración esperamos vernos favorecido a su orden de compra
                                </span></stron>
                            </div>
                            <br/>

                            <div>
                                <table class="table table-sm table-bordered" >
                                    <thead>
                                        <tr class="text-center">
                                            <th class="table-secondary">
                                                <span>ITEM</span>
                                            </th>
                                            <th class="table-secondary">
                                                <span>DESCRIPCION DEL PRODUCTO</span>
                                            </th>
                                            <th class="table-secondary">
                                                <span>MATERIAL</span>
                                            </th>
                                            <th class="table-secondary">
                                                <span>MEDIDAS (Ancho x Largo)</span>
                                            </th>
                                            <th class="table-secondary">
                                                <span>CANTIDAD</span>
                                            </th>
                                            <th class="table-secondary">
                                                <span>PRECIO REFERENCIAL $ USD</span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="invoice_tbody">
                                        <t t-set="number_item" t-value="0"/>
<!--                                        <t t-set="lines" t-value="o.order_line.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>-->
                                        <t t-foreach="o.order_line" t-as="line">
                                            <tr class="text-center">
                                                <t t-set="number_item" t-value="number_item +1 "/>
                                                <td>
                                                    <span t-esc="number_item"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.name"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.x_studio_material"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.x_medidas"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.product_uom_qty"/>
                                                    <span t-field="line.product_uom.name"/>
                                                </td>
                                                <td>
<!--                                                    <t t-if="o.x_tasav != 0">-->
<!--                                                        <t t-set="sub_total_rate" t-value="line.price_subtotal / o.x_tasav"/>-->
<!--                                                    </t>-->
<!--                                                    <t t-else="">-->
<!--                                                        <t t-set="sub_total_rate" t-value="0.0"/>-->
<!--                                                    </t>-->
                                                    <t t-set="price_unit_rate" t-value="line.price_unit / o.x_tasav"/>
                                                    <span t-esc="price_unit_rate" t-options='{"widget": "float", "precision": 2}'/>
<!--                                                    <span t-esc="sub_total_rate"/>-->
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <br/>

                            <div>

                                <span style="font-size: 12pt">OBSERVACIONES: </span>
                                <span t-field="o.commitment_date" style="font-size: 12pt"/>
                                <br/>
                                <span style="font-size: 12pt">CONDICIONES GENERALES DE LA VENTA</span>
                                <div class="row">
                                    <div class="col-1"/>
                                    <div class="col-1 text-center">
                                        <span>a)</span>
                                    </div>
                                    <div class="col-3 text-left">
                                        <span>Tiempo de entrega:</span>
                                    </div>
                                    <div class="col-5 text-left border-bottom border-secondary">
                                        <span t-field="o.x_tiempo"/>
                                    </div>
                                    <div class="col-2"/>
                                </div>
                                <div class="row">
                                    <div class="col-1"/>
                                    <div class="col-1 text-center">
                                        <span>b)</span>
                                    </div>
                                    <div class="col-3 text-left">
                                        <span>Forma de pago:</span>
                                    </div>
                                    <div class="col-5 text-left border-bottom border-secondary">
                                        <span t-field="o.x_payment_method"/>
                                    </div>
                                    <div class="col-2"/>
                                </div>
                                <div class="row">
                                    <div class="col-1"/>
                                    <div class="col-1 text-center">
                                        <span>c)</span>
                                    </div>
                                    <div class="col-3 text-left">
                                        <span>Validez de la Oferta:</span>
                                    </div>
                                    <div class="col-5 text-left border-bottom border-secondary">
                                        <span t-field="o.x_validez"/>
                                    </div>
                                    <div class="col-2"/>
                                </div>
                                <div class="row">
                                    <div class="col-1"/>
                                    <div class="col-1 text-center">
                                        <span>d)</span>
                                    </div>
                                    <div class="col-3 text-left">
                                        <span>Lugar de Entrega:</span>
                                    </div>
                                    <div class="col-5 text-left border-bottom border-secondary">
                                        <span t-field="o.partner_shipping_id.street"/>
                                    </div>
                                    <div class="col-2"/>
                                </div>
                            </div>


                            <div>
                                <span style="font-size: 12pt">NOTAS:</span>
                                <div class="row">
                                    <div class="col-1"/>
                                    <div class="col-11 text-left">
                                        <span t-field="o.note"/>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <br/>

                        <div class="text-center" style="font-size: 10pt">
                            <span>Atentamente,</span>
                            <br/>
                            <br/>
                            <span>Antonio Diaz</span>
                            <br/>
                            <span>Director Comercial</span>
                        </div>

                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
