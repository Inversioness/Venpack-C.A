<odoo>
  <data>
     <record id="custom_view_account_move_form" model="ir.ui.view">
            <field name="name">custom.view.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <field name="partner_id" position="after">
                    <field name="x_purchase_order" attrs="{'invisible':[('move_type', '!=', 'out_invoice')]}"/>
                    <field name="x_dispatch_number_tracking" attrs="{'invisible':[('move_type', '!=', 'out_invoice')]}"/>
                    <field name="x_IM_vaucher_number" attrs="{'invisible':[('move_type', '!=', 'in_invoice')]}"/>
                </field>

            </field>
        </record>
  </data>
</odoo>