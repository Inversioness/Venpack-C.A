<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderDetails" t-inherit="point_of_sale.OrderDetails" t-inherit-mode="extension">
        <xpath expr="//t[@t-esc='total']" position="after">
            <span style="color: red;">/</span>
            <span style="color: red;">
                <t t-esc="total_ref"/>
            </span>
        </xpath>
        <xpath expr="//t[@t-esc='tax']" position="after">
            <span style="color: red;">/</span>
            <span style="color: red;">
                <t t-esc="tax_ref"/>
            </span>
        </xpath>
    </t>

</templates>
