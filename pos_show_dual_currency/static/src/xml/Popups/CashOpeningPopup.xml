<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="CashOpeningPopup" t-inherit="point_of_sale.CashOpeningPopup" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('opening-cash-section')]" position="after">
            <div class="opening-cash-section">
                <span class="info-title">USD Opening cash</span>
                <div class="cash-input-sub-section" t-on-input="handleInputChangeUSD">
                    <input class="pos-input" type="number" t-model.number="state.openingCashUSD"/>
                    <div class="button icon" t-on-click="openDetailsPopupUSD">
                                <i class="fa fa-calculator" role="img" title="Open the money details popup"/>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//textarea[@class='opening-cash-notes']" position="after">

            <MoneyDetailsPopupUSD
                    t-if="state.displayMoneyDetailsPopupUSD"
                    manualInputCashCountUSD="manualInputCashCountUSD"
                    onConfirm="(payload) => this.updateCashOpeningUSD(payload)"
                    onDiscard.bind="closeDetailsPopupUSD"
            />
        </xpath>

    </t>
</templates>



