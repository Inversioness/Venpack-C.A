<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">Res Config Setting Difference Ref</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='pos_payment_section']//div[3]//div[@class='o_setting_right_pane']//div[@class='content-group mt16']" position="after">
                    <div class="content-group mt16" attrs="{'invisible': [('pos_set_maximum_difference', '=', False)]}">
                        <label for="pos_amount_authorized_diff_ref" string="Diferencia autorizada $" class="fw-normal"/>
                        <field name="pos_amount_authorized_diff_ref"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>