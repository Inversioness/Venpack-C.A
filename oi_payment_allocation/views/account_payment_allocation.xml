<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_account_payment_allocation_form" model="ir.ui.view">
		<field name="name">account.payment.allocation.form</field>
		<field name="model">account.payment.allocation</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="partner_id" options="{'no_create' : True}" />
						<field name="show_child" />															
						<field name="payment_ids" invisible="1" />	
						<field name="invoice_ids" invisible="1" />					
						<field name="currency_id" options="{'no_create' : True, 'no_open' : 1}" groups="base.group_multi_currency"/>
					</group>
					<group>
						<field name="company_id" options="{'no_create_edit' : True}" groups="base.group_multi_company" />
						<field name="account_id" options="{'no_create_edit' : True}" domain = "[('company_id', '=', company_id), ('user_type_id.type', 'in', ['payable', 'receivable'])]" />	
						<label for="date_from" string="Date" />
						<div class="o_row">
							<field name="date_from" nolabel="1" class="oe_inline" />							
							<field name="date_to" nolabel="1" class="oe_inline" />
						</div>
						<field name="ref" />
					</group>
				</group>
				<group string="Internal Transfer / Send Money" attrs="{'invisible': [('transfer_outbound_line_ids', '=', []), ('transfer_inbound_line_ids', '=', [])]}">
					<field name="transfer_outbound_line_ids" nolabel="1">
						<tree editable="top" create="false" delete="false">
							<field name="move_line_id" invisible="1" />
							<field name="type" invisible="1" />
							<field name="amount_residual" invisible="1" />
							<field name="sign" invisible="1" />
							<field name="company_currency_id" invisible="1" />
							<field name="allocation_currency_id" invisible="1" />
							<field name="move_currency_id" invisible="1" />
							<field name="partner_id" attrs="{'column_invisible': [('parent.show_child', '=', False)]}" />
							<field name="payment_id" invisible="1" />
							<field name="move_id" invisible="1" />
							<field name="refund" invisible="1" />
							<field name="document_name" string="Number" />
							<field name="date" />
							<field name="ref" />
							<field name="payment_amount" string="Amount" />
							<field name="amount_residual_display" />
							<field name="allocate" widget="boolean_toggle" />
							<field name="allocate_amount" sum="Total" attrs="{'readonly': [('allocate', '=', False)]}" />
						</tree>
					</field>
				</group>		
				<group string="Internal Transfer / Receive Money" attrs="{'invisible': [('transfer_outbound_line_ids', '=', []), ('transfer_inbound_line_ids', '=', [])]}">
					<field name="transfer_inbound_line_ids" nolabel="1">
						<tree editable="top" create="false" delete="false">
							<field name="move_line_id" invisible="1" />
							<field name="type" invisible="1" />
							<field name="amount_residual" invisible="1" />
							<field name="sign" invisible="1" />
							<field name="company_currency_id" invisible="1" />
							<field name="allocation_currency_id" invisible="1" />
							<field name="move_currency_id" invisible="1" />
							<field name="partner_id" attrs="{'column_invisible': [('parent.show_child', '=', False)]}" />
							<field name="payment_id" invisible="1" />
							<field name="move_id" invisible="1" />
							<field name="refund" invisible="1" />
							<field name="document_name" string="Number" />
							<field name="date" />
							<field name="ref" />
							<field name="payment_amount" string="Amount" />
							<field name="amount_residual_display" />
							<field name="allocate" widget="boolean_toggle" />
							<field name="allocate_amount" sum="Total" attrs="{'readonly': [('allocate', '=', False)]}" />
						</tree>
					</field>
				</group>										
				<group string="Payments / Credit Note" attrs="{'invisible': [('payment_line_ids', '=', []), '|', ('transfer_outbound_line_ids', '!=', []), ('transfer_inbound_line_ids', '!=', []) ]}">
					<field name="payment_line_ids" nolabel="1">
						<tree editable="top" create="false" delete="false" decoration-info="refund == True">
							<field name="move_line_id" invisible="1" />
							<field name="type" invisible="1" />
							<field name="amount_residual" invisible="1" />
							<field name="sign" invisible="1" />
							<field name="company_currency_id" invisible="1" />
							<field name="allocation_currency_id" invisible="1" />
							<field name="move_currency_id" invisible="1" />
							<field name="partner_id" attrs="{'column_invisible': [('parent.show_child', '=', False)]}" />
							<field name="payment_id" invisible="1" />
							<field name="move_id" invisible="1" />
							<field name="refund" invisible="1" />
							<field name="document_name" string="Number" />
							<field name="date" />
							<field name="ref" />
							<field name="payment_amount" string="Amount" />
							<field name="amount_residual_display" />
							<field name="allocate" widget="boolean_toggle" />
							<field name="allocate_amount" sum="Total" attrs="{'readonly': [('allocate', '=', False)]}" />
						</tree>
					</field>
				</group>
				<group string="Invoices" attrs="{'invisible': [('invoice_line_ids', '=', []), '|', ('transfer_outbound_line_ids', '!=', []), ('transfer_inbound_line_ids', '!=', []) ]}">
					<field name="invoice_line_ids" nolabel="1">
						<tree editable="top" create="false" delete="false">
							<field name="move_line_id" invisible="1" />
							<field name="type" invisible="1" />
							<field name="amount_residual" invisible="1" />
							<field name="sign" invisible="1" />
							<field name="company_currency_id" invisible="1" />
							<field name="allocation_currency_id" invisible="1" />	
							<field name="move_currency_id" invisible="1" />						
							<field name="partner_id" attrs="{'column_invisible': [('parent.show_child', '=', False)]}" />							
							<field name="move_id" />
							<field name="date_invoice" />
							<field name="date_maturity" />
							<field name="invoice_amount" />
							<field name="amount_residual_display" />
							<field name="allocate" widget="boolean_toggle" />
							<field name="allocate_amount" sum="Total" attrs="{'readonly': [('allocate', '=', False)]}" />
						</tree>
					</field>					
				</group>
				<group string="Other" attrs="{'invisible': [('other_line_ids', '=', [])]}">
					<field name="other_line_ids" nolabel="1">
						<tree editable="top" create="false" delete="false">
							<field name="move_line_id" invisible="1" />
							<field name="type" invisible="1" />
							<field name="amount_residual" invisible="1" />
							<field name="sign" invisible="1" />
							<field name="company_currency_id" invisible="1" />
							<field name="allocation_currency_id" invisible="1" />		
							<field name="move_currency_id" invisible="1" />					
							<field name="partner_id" attrs="{'column_invisible': [('parent.show_child', '=', False)]}" />
							<field name="move_id" />
							<field name="ref" />
							<field name="date" />
							<field name="invoice_amount" string="Amount" />
							<field name="amount_residual_display" />
							<field name="allocate" widget="boolean_toggle" />
							<field name="allocate_amount" sum="Total" attrs="{'readonly': [('allocate', '=', False)]}" />
						</tree>
					</field>										
				</group>				
				<group>
					<group>
						<field name="balance" />
					</group>
				</group>
				<group>
					<group string="Write off" attrs="{'invisible': [('balance', '=', 0)]}">
						<field name="writeoff_acc_id" string="Account" domain="[('user_type_id.type', '=', 'other'), ('company_id', '=', company_id)]" options="{'no_create_edit' : True}" />
						<field name="writeoff_journal_id" string="Journal" domain="[('company_id', '=', company_id)]" options="{'no_create_edit' : True}" attrs="{'required': [('balance', '!=', 0), ('writeoff_acc_id', '!=', False)]}" />
						<field name="writeoff_ref" string="Reference" />
					</group>
					<group string="Account/Partner Entry" attrs="{'invisible': [('show_child', '=', False)]}">
						<field name="create_entry" string="Create Entry" />
						<field name="entry_journal_id" string="Journal" domain="[('company_id', '=', company_id)]" options="{'no_create_edit' : True}" attrs="{'required': [('show_child', '=', True), ('create_entry', '=', True)]}" />
						<field name="entry_name" />						
					</group>									
				</group>
				<footer>
					<button string="Validate" name="validate" type="object" class="oe_highlight" />
					<button string="Cancel" class="btn btn-default" special="cancel" />
				</footer>
			</form>
		</field>
	</record>


</odoo>