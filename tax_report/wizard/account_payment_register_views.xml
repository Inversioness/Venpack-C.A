<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="custom_view_account_payment_register_form" model="ir.ui.view">
            <field name="name">custom.account.payment.register.form</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">

                <field name="partner_bank_id" position="after">
                    <field name="tax_code" invisible="1"/>
                    <field name="tax_id_domain" invisible="1"/>
                    <field name="tax_id" domain="tax_id_domain" attrs="{'invisible': [('tax_code', '=', False)]}"/>
                </field>
                <field name="communication" position="after">
                    <field name="x_tasa"/>
                </field>

            </field>
        </record>
    </data>
</odoo>
