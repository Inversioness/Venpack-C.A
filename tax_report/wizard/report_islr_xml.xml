                    <footer>
                        <button class="btn-primary" name="generar_xml" type="object" string="Generar"/>
                        <button class="btn-secondary" name="cancel" type="object" string="cancel"/>
                      </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>